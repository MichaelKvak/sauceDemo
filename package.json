{
  "name": "saucedemo-playwright-tests",
  "version": "1.0.0",
  "description": "Playwright test automation framework for Sauce Demo using Page Object Model",
  "main": "index.js",
  "scripts": {
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:chromium": "playwright test --project=chromium",
    "test:firefox": "playwright test --project=firefox",
    "test:webkit": "playwright test --project=webkit",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:debug": "playwright test --debug",
    "test:ui": "playwright test --ui",
    "test:auth": "playwright test tests/auth/",
    "test:inventory": "playwright test tests/inventory/",
    "test:cart": "playwright test tests/cart/",
    "test:checkout": "playwright test tests/checkout/",
    "test:e2e": "playwright test tests/e2e/",
    "report": "playwright show-report",
    "codegen": "playwright codegen https://www.saucedemo.com"
  },
  "keywords": [
    "playwright",
    "testing",
    "automation",
    "e2e",
    "page-object-model"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@types/node": "^25.2.3",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "dotenv": "^17.3.1"
  }
}
